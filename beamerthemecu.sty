% Multiple footnote citations, see https://tex.stackexchange.com/a/123888/61591
\RequirePackage{fnpct}
\AdaptNote\footcite{oo+m}[footnote]{%
\setfnpct{dont-mess-around}%
\IfNoValueTF{#1}
{#NOTE{#3}}
{\IfNoValueTF{#2}
{#NOTE[#1]{#3}}
{#NOTE[#1][#2]{#3}}}}

