\newcommand{\backmatter}{
    \begingroup
    \setbeamertemplate{footline}{}
    \themecolor{blue}
    \begin{frame}[c]{}
        \centering
        \begin{minipage}{\textwidth}
            \usebeamercolor[fg]{normal text}
            \centering
            \Huge \(\mathcal{Q}\) \textit{\&} \(\mathcal{A}\)\\
